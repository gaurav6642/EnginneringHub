<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    style="@style/AppTheme"
    tools:context=".ContactUs">



    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                app:title="Contact Us"
                android:gravity="center"
                app:titleTextColor="@color/colorText"
                android:id="@+id/main_toolbar"
                android:fontFamily="@font/roboto_bold"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:src="@drawable/contact_us"

            android:layout_gravity="center"
            android:layout_width="700dp"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"/>

        <ScrollView
            android:layout_below="@+id/contact_us_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="4dp"
                    android:padding="4dp"
                    android:elevation="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="4dp"
                        android:id="@+id/ll"
                        android:orientation="vertical"
                        android:layout_below="@+id/contact_us_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_office"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:paddingTop="5dp"
                                    android:textSize="10sp"
                                    android:fontFamily="@font/roboto_light"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Company Name"/>
                                <TextView
                                    android:id="@+id/name"
                                    android:paddingBottom="5dp"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/roboto_italic"
                                    android:textColor="@color/colorAccent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height=".7dp"
                            android:background="@color/colorPrimary"/>
                        <LinearLayout
                            android:id="@+id/director_name"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_user"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textAlignment="viewStart"
                                    android:paddingTop="5dp"
                                    android:textSize="10sp"
                                    android:fontFamily="@font/roboto_light"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Director's Name"/>
                                <TextView
                                    android:id="@+id/director_name_txt"
                                    android:paddingBottom="5dp"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/roboto_italic"
                                    android:textColor="@color/colorAccent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="xyz@hotmail.com"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height=".7dp"
                            android:background="@color/colorPrimary"/>
                        <LinearLayout
                            android:id="@+id/autoMail"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_email"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textAlignment="viewStart"
                                    android:paddingTop="5dp"
                                    android:textSize="10sp"
                                    android:fontFamily="@font/roboto_light"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email Id"/>
                                <TextView
                                    android:id="@+id/emailId"
                                    android:paddingBottom="5dp"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/roboto_italic"
                                    android:textColor="@color/colorAccent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="xyz@hotmail.com"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height=".7dp"
                            android:background="@color/colorPrimary"/>


                        <LinearLayout
                            android:id="@+id/autoCall"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_call"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:paddingTop="5dp"
                                    android:textSize="10sp"
                                    android:fontFamily="@font/roboto_light"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Contact No."/>
                                <TextView
                                    android:id="@+id/contact_no"
                                    android:paddingBottom="5dp"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/roboto_italic"
                                    android:textColor="@color/colorAccent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height=".7dp"
                            android:background="@color/colorPrimary"/>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_gps"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:paddingTop="5dp"
                                    android:textSize="10sp"
                                    android:fontFamily="@font/roboto_light"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Address"/>
                                <TextView
                                    android:id="@+id/companyAddress"
                                    android:paddingBottom="5dp"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/roboto_italic"
                                    android:textColor="@color/colorAccent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
                            </LinearLayout>
                        </LinearLayout>




                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:map="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/maps"
                    android:layout_marginTop="24dp"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />
            </LinearLayout>


        </ScrollView>






    </LinearLayout>



    <com.google.android.material.navigation.NavigationView
        app:itemIconTint="@color/colorAccent"
        app:itemTextColor="@color/colorAccent"
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/nav_header"
        android:layout_gravity="start"
        />





</androidx.drawerlayout.widget.DrawerLayout>